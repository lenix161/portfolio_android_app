<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FifthFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:text="Связаться со мной"
        android:textAlignment="center"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gmailLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:background="@drawable/background_for_icons"
        android:src="@drawable/ic_gmail__1_"
        app:layout_constraintBottom_toTopOf="@+id/vkLogo"
        app:layout_constraintEnd_toEndOf="@+id/vkLogo"
        app:layout_constraintStart_toStartOf="@+id/vkLogo" />

    <ImageView
        android:id="@+id/vkLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:src="@drawable/ic_vk"
        android:background="@drawable/background_for_icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/igLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:background="@drawable/background_for_icons"
        android:src="@drawable/ic_instagram"
        app:layout_constraintEnd_toEndOf="@+id/vkLogo"
        app:layout_constraintStart_toStartOf="@+id/vkLogo"
        app:layout_constraintTop_toBottomOf="@+id/vkLogo" />


</androidx.constraintlayout.widget.ConstraintLayout>